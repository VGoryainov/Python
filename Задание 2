import math

def get_input(): # Ввод данных
    d1_yards = float(input("Введите кратчайшее расстояние между спасателем и кромкой воды, d1 (ярды) => "))
    d2 = float(input("Введите кратчайшее расстояние от утопающего до берега, d2 (футы) => "))
    h_yards = float(input("Введите боковое смещение между спасателем и утопающим, h (ярды) => "))
    v_sand_mph = float(input("Введите скорость движения спасателя по песку, v_sand (мили в час) => "))
    n = float(input("Введите коэффициент замедления спасателя при движении в воде, n => "))
    theta_deg = float(input("Введите направление движения спасателя по песку, theta1 (градусы) => "))
    return d1_yards, d2, h_yards, v_sand_mph, n, theta_deg

def convert(d1_yards, h_yards): # Конвертация всех единиц в фунты
    d1_feet = d1_yards * 3
    h_feet = h_yards * 3
    return d1_feet, h_feet

def calculate_time(d1, d2, h, v_sand_mph, n, theta_deg): # Расчет времени
    theta_rad = math.radians(theta_deg) # Переволим градусы в радианы
    x = d1 * math.tan(theta_rad)
    L1 = math.sqrt(x ** 2 + d1 ** 2)
    L2 = math.sqrt((h - x) ** 2 + d2 ** 2)
    v_sand_fps = v_sand_mph * 5280 / 3600 # Переводим мили/час в футы/секунду
    t = (L1 + n * L2) / v_sand_fps
    return t

def get_output(theta, t):
    print(f"Если спасатель начнёт движение под углом theta1, равным {theta:.0f} градусам, он достигнет утопающего через {t:.1f} секунды")

data = get_input()
d1, h = convert(data[0],data[2])
time_seconds = calculate_time(d1, data[1], h, data[3], data[4], data[5])
get_output(data[5],time_seconds)


# Тесты
def test_calculate_time():
    d1 = 24  # 8 ярдов = 24 фута
    d2 = 10
    h = 150  # 50 ярдов = 150 футов
    v_sand_mph = 5
    n = 2
    theta_deg = 39.413
    expected = 39.9
    epsilon = 1.0e-1
    actual = calculate_time(d1, d2, h, v_sand_mph, n, theta_deg)
    if abs(actual - expected) > epsilon:
        print("Test failed")
    else:
        print("Test passed")

test_calculate_time()
